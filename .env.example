
# Telegram API credentials (get from my.telegram.org)
API_ID=your_api_id
API_HASH=your_api_hash

# Facebook/Instagram App credentials (get from developers.facebook.com)
FACEBOOK_APP_ID=your_facebook_app_id
FACEBOOK_APP_SECRET=your_facebook_app_secret

# JWT Secret for authentication
JWT_SECRET=your-super-secret-jwt-key-change-this

# Database URL
DATABASE_URL=postgresql://crossmessenger:password@localhost:5432/crossmessenger

# Redis URL (optional)
REDIS_URL=redis://localhost:6379

# Encryption key for session storage (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
ENCRYPTION_KEY=your-encryption-key

# URLs
FRONTEND_URL=http://0.0.0.0:3000
BACKEND_URL=http://0.0.0.0:5000
